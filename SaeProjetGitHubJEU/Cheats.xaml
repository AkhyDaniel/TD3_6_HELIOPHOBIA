<Window x:Class="SaeProjetGitHubJEU.Cheats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaeProjetGitHubJEU"
        mc:Ignorable="d"
        Title="Cheats" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.498,0.387">
        <Slider x:Name="sliderCapes" HorizontalAlignment="Center" VerticalAlignment="Top" Width="216" Height="24"  Margin="0,314,0,0" Minimum="1" Maximum="3" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight" AutoToolTipPlacement="BottomRight"/>
        <Label  HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Height="88" Width="396">
            <Label.Background>
                <ImageBrush ImageSource="/imagesBut/butCheat.png"/>
            </Label.Background>
        </Label>
        <Label Content="Vitesse : ( 1 = Tres Lent , 2 = Normal , 3 = UltraSpeed )" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Width="298"/>
        <Slider x:Name="sliderVitesse" HorizontalAlignment="Center" VerticalAlignment="Top" Width="216" Height="24"  Margin="0,217,0,0" Minimum="1" Maximum="3" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight" AutoToolTipPlacement="BottomRight"/>
        <Button x:Name="butOkC" HorizontalAlignment="Left" Margin="84,345,0,0" VerticalAlignment="Top" Height="41" Width="143" Click="butOkC_Click">
            <Button.Background>
                <ImageBrush ImageSource="/imagesBut/butOK.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="butAnnuleC"  HorizontalAlignment="Left" Margin="589,345,0,0" VerticalAlignment="Top" Height="41" Width="141" Click="butAnnuleC_Click">
            <Button.Background>
                <ImageBrush ImageSource="/imagesBut/butAnnuler.png"/>
            </Button.Background>
        </Button>
        <Label Content="Nombre de Capes : (1 = 0 , 2 = Normal , 3 = 999)" HorizontalAlignment="Center" Margin="0,261,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.164,1.668"/>

    </Grid>
</Window>
